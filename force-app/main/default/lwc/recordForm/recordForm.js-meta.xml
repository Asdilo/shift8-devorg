<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>48.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Record Form Fields</masterLabel>
    <description>This custom component allows you to add in record form fields</description>
    <targets>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property name="fields" type="String" default="Name, CreatedById, OwnerId" label="Record Fields" description="Enter comma seperated record fields" />
            <property name="columns" type="Integer" default="2" label="Number of Columns" description="Enter an interger between 1 and 6"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>