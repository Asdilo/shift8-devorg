<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata" fqn="tileList">
    <apiVersion>46.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Tile List</masterLabel>
    <description>This custom component allows you to list out records using SLDS tiles.</description>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__HomePage,lightning__RecordPage,lightning__AppPage">
            <property name="icon" type="String" default="doctype:video" label="Component Icon"/>
            <property name="title" type="String" default="Tile List" label="Component Title"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>